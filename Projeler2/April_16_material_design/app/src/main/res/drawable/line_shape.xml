<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- shape="oval" yuvarlak olur
    shape="line" çizgi olur-->


    <!--solid : renk verir
    corners :kenarlardan köşelik verir
    shape kare oluşturur
    stroke kenarlık rengi verir
    padding içerden kenarlık
    size: verilmemesi önerilir. Bizim verdiğimiz değerlerle butonun şekil alınması önerilir-->
    <solid android:color="@color/purple_200"></solid>
    <corners android:radius="10dp"></corners>
    <stroke android:width="10dp" android:color="@color/primaryLightColor"></stroke>
    <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp" />

</shape>